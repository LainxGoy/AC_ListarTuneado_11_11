<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Roles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/etNombreRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Rol"
        android:background="@drawable/rounded_edittext"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:layout_marginBottom="12dp" />
    <EditText
        android:id="@+id/etDescripcionRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del Rol"
        android:background="@drawable/rounded_edittext"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:layout_marginBottom="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnGuardarRol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnEditarRol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:padding="10dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnEliminarRol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvListaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roles registrados:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />
    <ListView
        android:id="@+id/listViewRoles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/black"
        android:dividerHeight="0.8dp"
        android:background="#FFFFFF"
        android:padding="6dp"
        android:elevation="2dp" />

</LinearLayout>
